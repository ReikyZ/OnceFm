<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textview_song_info">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="textview_song_artist">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#dd000000</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="textview_song_album">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#bbffffff</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="ViewDiv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#d2d2d2</item>
    </style>
</resources>
